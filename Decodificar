
public class Decodificar {
    private int n=0;
  public  String veoCodigo(String codigo){
        for (int i=0; i< codigo.length(); i++){
            char caracter = codigo.charAt(i); 
             n= n+ PruebaisNumber(caracter);}
             if (n>0){
                 n=0;
             return "El codigo no puede tener letras y solo puede ser 1 o 0";
             }
             else{
                 n=0;
             return "Procesaremos su codigo";}
	}
        
        private static int PruebaisNumber(char caracter){
            try{
            Integer.parseInt(String.valueOf(caracter));
            if (Integer.parseInt(String.valueOf(caracter))==0 || Integer.parseInt(String.valueOf(caracter))==1){
            return 0; }// si lo es no manda un true
            else{ return 1;}
        } catch (NumberFormatException e){
            return 1;// si no lo es lo agarra el exception y nos manda false
        }}
            public void Stuff(){
            System.out.println("aho");
            }
    
  
              
        
}
  
              
        
}
